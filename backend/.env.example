# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Выберите способ подключения к базе данных:
# - "public" - для локальной разработки (подключение через TCP/IP)
# - "unix_socket" - для GCP Cloud SQL (подключение через Unix Socket)
DB_CONNECTION_TYPE=public

# --- PUBLIC IP CONNECTION (для локальной разработки) ---
# Используется когда DB_CONNECTION_TYPE=public
DB_HOST=localhost
DB_PORT=5432
DB_NAME=felend
DB_USER=user
DB_PASSWORD=password

# --- UNIX SOCKET CONNECTION (для GCP Cloud SQL) ---
# Используется когда DB_CONNECTION_TYPE=unix_socket
# Формат: project-id:region:instance-name
# Пример: my-project:us-central1:felend-db
# DB_INSTANCE_CONNECTION_NAME=your-project:your-region:your-instance
# DB_SOCKET_DIR=/cloudsql

# --- LEGACY (deprecated, но поддерживается для обратной совместимости) ---
# Если установлена DATABASE_URL, она имеет приоритет над всеми настройками выше
# DATABASE_URL=postgresql://user:password@localhost:5432/felend

# ============================================================================
# APPLICATION
# ============================================================================
SECRET_KEY=your-secret-key-here
DEBUG=True

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth & Forms API
# Получите эти данные в Google Cloud Console:
# 1. Создайте проект
# 2. Включите Google Forms API и Google OAuth2 API  
# 3. Создайте OAuth 2.0 Client ID
# 4. Добавьте redirect URI: http://localhost:8000/api/v1/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS
# Список разрешённых origins для CORS (через запятую)
# Для разработки: локальные серверы
# Для продакшена: добавьте ваши production URLs
CORS_ORIGINS=http://localhost:3000,http://localhost:5173